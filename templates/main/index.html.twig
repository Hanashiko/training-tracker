{% extends 'base.html.twig' %}

{% block title %}Трекер тренувань{% endblock %}

{% block body %}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4"> Трекер тренувань </h1>
            <p class="lead mb-5">Відстежйте свої тренування та досягайте цілей!</p>

            <div class="row">
                {% if is_granted('ROLE_USER') %}
                    <div class="col-md-6 mb-4">
                        <div class="card h-100 shadow">
                            <div class="card-body">
                                <h2 class="card-title">Мої тренування </h2>
                                <p class="card-text">Переглядайте та керуйте своїми тренуваннями </p>
                                <a href="{{ path('app_workout_index') }}" class="btn btn-primary btn-lg"> 
                                    Перейти 
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4">
                        <div class="card h-100 shadow">
                            <div class="card-body">
                                <h2 class="card-title"> Додати тренування</h2>
                                <p class="card-text">Зафіксуйте нове тренування</p>
                                <a href="{{ path('app_workout_new') }}" class="btn btn-success btn-lg">
                                    Створити 
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4">
                        <div class="card h-100 shadow">
                            <div class="card-body">
                                <h2 class="card-title"> Увійти </h2>
                                <p class="card-text">Вже маєте акаунт? Увійдіть</p>
                                <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">
                                    Увійти 
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4">
                        <div class="card h-100 shadow">
                            <div class="card-body">
                                <h2 class="card-title">Реєстрація </h2>
                                <p class="card-text">Створіть новий аккаунт </p>
                                <a href="{{ path('app_register') }}" class="btn btn-success btn-lg">
                                    Зареєструватись 
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4">
                        <div class="card h-100 shadow">
                            <div class="card-body">
                                <h2 class="card-title"> Список вправ </h2>
                                <p class="card-text">Переглядайте список наявних вправ</p>
                                <a href="{{ path('app_exercise_index') }}" class="btn btn-primary btn-lg">
                                    Перейти
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4">
                        <div class="card h-100 shadow">
                            <div class="card-body">
                                <h2 class="card-title">Додати вправу </h2>
                                <p class="card-text">Доповність список наявних вправ </p>
                                <a href="{{ path('app_exercise_new') }}" class="btn btn-success btn-lg">
                                    Створити 
                                </a>
                            </div>
                        </div>
                    </div>
                    
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
